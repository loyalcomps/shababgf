<odoo>
  <data>
    <record model="ir.ui.view" id="product_arabic_product_form">
      <field name="name">product_arabic.product.form</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view" />
      <field name="arch" type="xml">
        <xpath expr="//div[@name='options']" position="before">
          <label class="oe_edit_only" for="name_arabic" string="Arabic Name"/>
          <h1>
            <field name="name_arabic" placeholder="Arabic Name"/>
          </h1>

        </xpath>
      </field>
    </record>

  </data>
</odoo>